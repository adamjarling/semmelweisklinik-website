---
import BaseLayout from '../../../layouts/BaseLayout.astro';
---

<BaseLayout title="Semmelweisklinik • Programm">
  <div class="page-wrapper">
    <div class="content container-wide">
      <h1 class="hero-title">PROGRAMM</h1>

      <div class="grid-2col mt-50">
        <div class="grid-2col-item">
          <a href="/de/program/sommerfest-2025" class="naked-link">
            <img
              class="grid-2col-image program-image"
              src="/images/program/sommerfest-2025/Coverbild_250726_SWK_Sommerfest_c_Johanna_Lea_Lassnig-69.jpg"
              alt="Sommerfest 2025"
            />
          </a>
          <p class="only-desktop text-32">Klinik unter Palmen 2025</p>
          <p class="only-mobile text-28">Klinik unter Palmen 2025</p>
          <p>
            Eine Nachlese zu unserem Sommerfest (25.-26. Juli 2025)<br />
            <a href="/de/program/sommerfest-2025">Mehr erfahren</a>
          </p>
        </div>

        <div class="grid-2col-item">
          <a href="/de/program/collective-reflections-ai-art-culture" class="naked-link">
            <img
              class="grid-2col-image program-image"
              src="/images/program/collective-reflections-ai-art-culture/collective_reflections_on_ai_art_culture-title.jpg"
              alt="Collective Reflections on AI, Art & Culture"
            />
          </a>
          <p class="only-desktop text-32">Collective reflections on AI, Art & Culture</p>
          <p class="only-mobile text-28">Collective reflections on AI, Art & Culture</p>
          <p>
            Eine sechsteilige Workshop-Reihe an der Schnittstelle von Kreativität und KI (Mai-September 2025)<br />
            <a href="/de/program/collective-reflections-ai-art-culture">Mehr erfahren</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
