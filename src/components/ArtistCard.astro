---
import { getLangFromUrl } from '../i18n/utils';

interface Props {
  name: string;
  slug: string;
  profileImage: string;
}

const { name, slug, profileImage } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<div style="max-width: min-content;">
  <a href={`/${lang}/artists/${slug}`} style="border-bottom: none;">
    <img class="artist-image" src={profileImage} alt={name} />
  </a>
  <p style="margin-top: 5px;">
    <a href={`/${lang}/artists/${slug}`}>{name}</a>
  </p>
</div>
